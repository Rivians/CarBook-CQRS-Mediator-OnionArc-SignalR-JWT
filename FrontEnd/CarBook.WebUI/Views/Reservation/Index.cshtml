@model CreateReservationDto

@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/UILayout/Index.cshtml";
}

<div class="col-md-12 block-9 mb-md-5">
	<form class="bg-light p-5 contact-form" method="post">
		<h3 class="alert alert-success">Araç Rezervasyon Formu</h3>
		<input type="hidden" value="@ViewBag.v3" class="form-control" asp-for="CarID" placeholder="Almak İstediğiniz Araba">
		<div class="form-group">
			<label>Adınız</label>
			<input type="text" class="form-control" asp-for="Name" placeholder="Adınız">
		</div>
		<div class="form-group">
			<label>Soyadınız</label>
			<input type="text" class="form-control" asp-for="Surname" placeholder="Soyadınız">
		</div>
		<div class="form-group">
			<label>Email</label>
			<input type="email" class="form-control" asp-for="Email" placeholder="Mail Adresiniz">
		</div>
		<div class="form-group">
			<label>Telefon</label>
			<input type="number" class="form-control" asp-for="Phone" placeholder="Telefon Numaranız">
		</div>
		<div class="form-group">
			<label>Alınmak İstenen Lokasyon</label>
			<select asp-for="PickUpLocationID" asp-items="ViewBag.v" class="form-control"></select>
			@* <input type="email" class="form-control" placeholder="Almak İstediğiniz Lokasyon"> *@
		</div>
		<div class="form-group">
			<label>İade Edilecek Lokasyon</label>
			<select asp-for="DropOffLocationID" asp-items="ViewBag.v" class="form-control"></select>
			@* <input type="email" class="form-control" placeholder="Teslim Etmek İstediğiniz Lokasyon"> *@
		</div>
		<div class="form-group">
			<label>Yaşınız</label>
			<input type="number" class="form-control" asp-for="Age" placeholder="Yaşınız">
		</div>
		<div class="form-group">
			<label>Ehliyet Yılınız</label>
			<input type="text" class="form-control" asp-for="DriverLicenseYear" placeholder="Ehliyet Yılınız">
		</div>
		<div class="form-group">
			<textarea cols="30" rows="7" class="form-control" asp-for="Description" placeholder="Varsa Eklemek İstedikleriniz.."></textarea>
		</div>
		<div class="form-group">
			<input type="submit" value="Rezervasyonu Tamamla" class="btn btn-primary py-3 px-5">
		</div>
	</form>

</div>

