@model UpdateFeatureDto

@{
	ViewData["Title"] = "CraeteCar";
	Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
	<div class="container-fluid">
		<div class="row">
			<div class="col-xl-12">
				<div class="card">
					<div class="card-body">
						<h4 class="card-title">Araç Özelliği Güncelleme Sayfası</h4>
						<p class="card-subtitle mb-4">Araç ile ilgili özellikleri aşağıdaki kutuğuca girebilirsiniz. Veri girişlerinden sonra kaydet butonuna tıklayarak işlemi tamamlayabilirsiniz.</p>
						<form method="post">
							<div class="form-group">
								<input type="hidden" asp-for="FeatureId" />
								<label for="exampleInputName">Özellik Adı</label>
								<input type="text" class="form-control" asp-for="Name" id="exampleInputName" placeholder="Özellik Adı Girişi Yapınız">
							</div>
							<button type="submit" class="btn btn-primary waves-effect waves-light">Özelliği Kaydet</button>
						</form>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>



