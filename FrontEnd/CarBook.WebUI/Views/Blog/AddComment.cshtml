
<div class="comment-form-wrap pt-5">
    <h3 class="mb-5">Bir Yorum Bırakın</h3>
    <form asp-controller="Blog" asp-action="AddComment" class="p-5 bg-light">
        <div class="form-group">
            <label for="name">Adınız Soyadınız</label>
            <input type="text" name="Name" class="form-control" id="name">
        </div>
        <div class="form-group">
            <input type="hidden" readonly name="BlogID" value="@ViewBag.blogid"/>
        </div>
        <div class="form-group">
            <label class="form-group">Email Adresiniz</label>
            <input type="email" name="Email" class="form-control" id="email">
        </div>
        <div class="form-group">
            <label for="message">Yorumunuz</label>
            <textarea name="Description" id="message" cols="30" rows="10" class="form-control"></textarea>
        </div>
        <div class="form-group">
            <input type="submit" value="Yorum Yap" class="btn py-3 px-4 btn-primary">
        </div>

    </form>
</div>