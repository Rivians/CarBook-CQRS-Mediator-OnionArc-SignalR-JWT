@model UpdateCarDto

@{
    ViewData["Title"] = "UpdateCar";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
	<div class="container-fluid">
		<div class="row">
			<div class="col-xl-12">
				<div class="card">
					<div class="card-body">
						<h4 class="card-title">Araç Güncelleme Sayfası</h4>
						<p class="card-subtitle mb-4">Araç ile ilgili temel bilgileri eksiksiz doldurmanız önemlidir. Veri girişlerinden sonra kaydet butonuna tıklayarak güncelleme işlemini tamamlayabilirsiniz.</p>

						<form method="post">
							<input type="hidden" asp-for="CarId" />
							<div class="form-group">
								<label for="exampleInputEmail1">Marka</label>
								DropDown
								@*  @Html.DropDownListFor(x => x.BrandID, (List<SelectListItem>)ViewBag.BrandValues, new{@class="form-control"}) *@
								<select class="form-control" asp-for="BrandID" asp-items="@ViewBag.BrandValues">
									<option value="">-- Marka Seçiniz --</option>
								</select>
							</div>
							<div class="form-group">
								<label for="exampleInputModel">Model</label>
								<input type="text" class="form-control" asp-for="Model" id="exampleInputModel" placeholder="Model Girişi Yapınız">
							</div>
							<div class="form-group">
								<label for="exampleInputCoverImageUrl">Kapak Fotoğrafı</label>
								<input type="text" class="form-control" asp-for="CoverImageUrl" id="exampleInputCoverImageUrl" placeholder="Kapak Fotoğraf Linkini Giriniz">
							</div>
							<div class="form-group">
								<label for="exampleInputKm">Km</label>
								<input type="text" class="form-control" asp-for="Km" id="exampleInputKm" placeholder="Km Bilgisini Giriniz">
							</div>
							<div class="form-group">
								<label for="exampleInputTransmission">Vites Türü</label>
								<input type="text" class="form-control" asp-for="Transmission" id="exampleInputTransmission" placeholder="Vites Türünü Yazınız">
							</div>
							<div class="form-group">
								<label for="exampleInputSeat">Koltuk Sayısı</label>
								<input type="number" class="form-control" asp-for="Seat" id="exampleInputSeat" placeholder="Koltuk Sayısını Seçiniz">
							</div>
							<div class="form-group">
								<label for="exampleInputLuggage">Bagaj Sayısı</label>
								<input type="number" class="form-control" asp-for="Luggage" id="exampleInputLuggage" placeholder="Bagaj Sayısını Giriniz">
							</div>
							<div class="form-group">
								<label for="exampleInputFuel">Yakıt Türü</label>
								<input type="text" class="form-control" asp-for="Fuel" id="exampleInputFuel" placeholder="Yakıt Türünü Giriniz">
							</div>
							<div class="form-group">
								<label for="exampleInputBigImageUrl">Büyük Kapak Fotoğrafı</label>
								<input type="text" class="form-control" asp-for="BigImageUrl" id="exampleInputBigImageUrl" placeholder="Araç Detayında Gözükecek Kapak Fotoğraf Linki">
							</div>
							<button type="submit" class="btn btn-primary waves-effect waves-light">Submit</button>
						</form>

					</div>
				</div>
			</div>
		</div>
	</div>
</div>




