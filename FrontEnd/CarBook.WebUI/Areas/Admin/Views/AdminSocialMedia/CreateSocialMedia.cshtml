@model CreateSocialMediaDto

@{
    ViewData["Title"] = "CreateSocialMedia";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
	<div class="container-fluid">
		<div class="row">
			<div class="col-xl-12">
				<div class="card">
					<div class="card-body">
						<h4 class="card-title">Sosyal Medya Sayfası Veri Girişi Alanı</h4>
						<p class="card-subtitle mb-4">
							Sosyal medya hesaplarınıza ait veri girişlerini buradana yapabilirsiniz. Yeni bir sosyal medya hesabı ekleyebilir, mevcut sosyal medya hesaplarınızı silebilirsiniz.
						</p>
						<form method="post">
							<div class="form-group">
								<label for="exampleInputName">Sosyla Medya Adı</label>
								<input type="text" class="form-control" asp-for="Name" id="exampleInputName" placeholder="Sosyal Medya Adını Giriniz">
							</div>
							<div class="form-group">
								<label for="exampleInputUrl">Url</label>
								<input type="text" class="form-control" asp-for="Url" id="exampleInputUrl" placeholder="Url Giriniz">
							</div>
							<div class="form-group">
								<label for="exampleInputIcon">İkon Bağlatısı</label>
								<input type="text" class="form-control" asp-for="Icon" id="exampleInputIcon" placeholder="İkon Url Adresini Giriniz">
							</div>
							<button type="submit" class="btn btn-primary waves-effect waves-light">Sosyal Medya Bilgisini Kaydet</button>
						</form>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>