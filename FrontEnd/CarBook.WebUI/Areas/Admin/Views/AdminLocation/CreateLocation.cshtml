@model CreateLocationDto

@{
    ViewData["Title"] = "CreateLocation";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
	<div class="container-fluid">
		<div class="row">
			<div class="col-xl-12">
				<div class="card">
					<div class="card-body">
						<h4 class="card-title">Lokasyon Veri Girişi Alanı</h4>
						<p class="card-subtitle mb-4">
							Araçların alındıgı ve teslim edildiği noktalara ait lokasyon bilgisinin girildiği sayfadır. Bilgileri eksiksiz olarak doldurun.
						</p>
						<form method="post">
							<div class="form-group">
								<label for="exampleInputName">Lokasyon Adı</label>
								<input type="text" class="form-control" asp-for="Name" id="exampleInputName" placeholder="Lokasyonu Giriniz">
							</div>
							<button type="submit" class="btn btn-primary waves-effect waves-light">Loaksyon Bilgisini Kaydet</button>
						</form>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>