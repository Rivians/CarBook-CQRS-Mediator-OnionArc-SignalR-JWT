@model List<ResultFeatureDto>

@{
	ViewData["Title"] = "CreateFeatureByCarId";
	Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
	<div class="container-fluid">
		<div class="row">
			<div class="col-xl-12">
				<div class="card">
					<div class="card-body">
						<h4 class="card-title">Araca Ait Özellik Ekleme Sayfası</h4>
						<p class="card-subtitle mb-4">
							Araca ait özellik tanımlaması yapılacak sayfadır.
						</p>
						<form method="post">
							@for (int i = 0; i < Model.Count; i++)
							{
								<div class="form-check">
@* 									<input type="hidden" asp-for="@Model[i].CarID" />
 *@									<input type="hidden" asp-for="@Model[i].FeatureId" />
									<input type="hidden" asp-for="@Model[i].Name" />
									<input type="checkbox" class="form-check-input" />  @* available özelliği zaten handlerda otomatik olarak false yapılıyor burada ekstradan almıyoruz.*@
									<label class="form-check-label">@Model[i].Name</label>
								</div>
							}
							<br />
							<button class="btn btn-primary">Özellikleri Ekle</button>
						</form>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>



