@model UpdateTestimonialDto

@{
    ViewData["Title"] = "UpdateTestimonial";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
	<div class="container-fluid">
		<div class="row">
			<div class="col-xl-12">
				<div class="card">
					<div class="card-body">
						<h4 class="card-title">Yeni Referans Veri Girişi Alanı</h4>
						<p class="card-subtitle mb-4">
							Referans ekleme işleminin yapılıdığı safyadır.
						</p>
						<form method="post">
							<input type="hidden"  asp-for="TestimonialID"/>
							<div class="form-group">
								<label for="exampleInputName">Ad Soyad</label>
								<input type="text" class="form-control" asp-for="Name" id="exampleInputName" placeholder="Referans Adı ve Soyadını Giriniz">
							</div>
							<div class="form-group">
								<label for="exampleInputTitle">Referans Ünvanı</label>
								<input type="text" class="form-control" asp-for="Title" id="exampleInputTitle" placeholder="Referans Ünvanını Giriniz">
							</div>
							<div class="form-group">
								<label for="exampleInputImageUrl">Referans Görsel Url</label>
								<input type="text" class="form-control" asp-for="ImageUrl" id="exampleInputImageUrl" placeholder="Referans Görsel Adresini Giriniz">
							</div>
							<div class="form-group">
								<label for="exampleInputImageUrl">Referans Yorumu</label>
								<textarea rows="5" asp-for="Comment" class="form-control" placeholder="Yorumunuzu Buraya Yazabilirsiniz"></textarea>
							</div>
							<button type="submit" class="btn btn-primary waves-effect waves-light">Referans Bilgisini Kaydet</button>
						</form>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>