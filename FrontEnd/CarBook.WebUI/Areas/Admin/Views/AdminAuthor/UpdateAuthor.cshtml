@model UpdateAuthorDto

@{
    ViewData["Title"] = "UpdateAuthor";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
	<div class="container-fluid">
		<div class="row">
			<div class="col-xl-12">
				<div class="card">
					<div class="card-body">
						<h4 class="card-title">Yeni Yazar Girişi</h4>
						<p class="card-subtitle mb-4">Yazar alanına veri girişini aşağıdaki panelden yapabilirsiniz.</p>
						<form method="post">
							<input type="hidden" asp-for="AuthorId" />
							<div class="form-group">
								<label for="exampleInputName">Ad Soyad</label>
								<input type="text" class="form-control" asp-for="Name" id="exampleInputName" placeholder="Başlığı Giriniz">
							</div>
							<div class="form-group">
								<label for="exampleInputDescription">Açıklama</label>
								<input type="text" class="form-control" asp-for="Description" id="exampleInputDescription" placeholder="Açıklamayı Giriniz">
							</div>
							<div class="form-group">
								<label for="exampleInputImageUrl">Yazar Görsel</label>
								<input type="text" class="form-control" asp-for="ImageUrl" id="exampleInputImageUrl" placeholder="Yazar Görsel Bilgisini Giriniz">
							</div>
							<button type="submit" class="btn btn-primary waves-effect waves-light">Yazarı Kaydet</button>
						</form>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
