@model List<ResultAllBlogsWithAuthorDto>

@{
	ViewData["Title"] = "Index";
	Layout = "~/Views/AdminLayout/Index.cshtml";
	int count = 0;
}

<div class="page-content">
	<div class="container-fluid">
		<div class="row">
			<div class="col-xl-12">
				<div class="card">
					<div class="card-body">
						<h4 class="card-title">Blog Listesi</h4>
						<p class="card-subtitle mb-4">
							Bloglarla ilgili silme, güncelleme ve blog listesi erişimini görebilirsiniz. Yeni blog ekleme işlemi admin tarafından yapılmamaktadır. Eğer blog ekleme işlemi yapmak isterseniz yazar olarak giriş yapmanız gerekmektedir. Her yazar sadece kendi bloglarını düzenleyebilir.
						</p>
						<div class="table-responsive">
							<table class="table mb-0">
								<thead>
									<tr>
										<th>#</th>
										<th>Başlık</th>
										<th>Yazar</th>
										<th>Kategori</th>
										<th>Tarih</th>
										<th>Yayından Kaldır</th>
										<th>Bloğu Aç</th>
										<th>Yorumlar</th>
									</tr>
								</thead>
								<tbody>
									@foreach (var item in Model)
									{
										count++;
										<tr>
											<td>@count</td>
											<td>@item.Title</td>
											<td>@item.AuthorName</td>
											<td>@item.CategoryId</td>
											<td>@item.CreatedTime</td>
											<td><a href="/Admin/AdminBlog/RemoveBlog/@item.BlogId" class="btn btn-outline-danger">Yayından Kaldır</a></td>
											<td><a href="#" class="btn btn-outline-dark">Bloğu Aç</a></td>
											<td><a href="/Admin/AdminBlog/BlogListByBlogID/@item.BlogId" class="btn btn-outline-dark">Yorumlar</a></td>
										</tr>
									}
								</tbody>
							</table>
							<a href="/Admin/AdminBlog/CreateBlog/" class="btn btn-outline-primary">Yeni Blog Girişi</a>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
